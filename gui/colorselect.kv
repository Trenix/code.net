<ColorSelectScreen>
    name: "colorselect"

    AnchorLayout:
        Image:
            size_hint: None, None
            size: 1644, 3840
            source: "images/defaultback.png"

    MDBoxLayout:
        orientation: "vertical"

        MDToolbar:
            title: "C0de.Net"
            right_action_items: [["refresh", lambda x: root.RefreshTracker()]]

        MDStackLayout:
            spacing: 10
            padding: 21

            MDLabel:
                adaptive_height: True
                text_color: C("FFFFFF")
                theme_text_color: "Custom"
                font_style: "H4"
                text: "Color Select"
                halign: "center"

            MDSeparator:
                color: C("FFFFFF")

            MDLabel:
                adaptive_height: True
                text_color: app.theme_cls.primary_color
                theme_text_color: "Custom"
                font_style: 'Subtitle1'
                text: "Please select your [color=#FFFFFF]color[/color], then select the color of the following player to the [color=#FFFFFF]left[/color] of you and continuing [color=#FFFFFF]clockwise[/color]."
                halign: "center"
                markup: True

            MDLabel:
                id: remainder
                height: self.texture_size[1]
                adaptive_height: True
                text_color: C('FFFFFF')
                theme_text_color: "Custom"
                font_style: 'Subtitle2'
                halign: "center"
                markup: True

        MDBoxLayout:
            size_hint: 1, 0.35

        MDGridLayout:
            padding: 5
            spacing: 5
            cols: 3
            spacing: 5

            MDFillRoundFlatIconButton:
                icon: "circle-outline"
                id: but1
                font_style: "Button" #800
                md_bg_color: C('#c62828')
                text: "Red"
                on_release:
                    root.ColorSelect(but1)

            MDFillRoundFlatIconButton:
                md_bg_color: C('#ad1457')
                icon: "circle-outline"
                id: but2
                font_style: "Button"
                text: "Pink"
                on_release:
                    root.ColorSelect(but2)

            MDFillRoundFlatIconButton:
                md_bg_color: C('#6a1b9a')
                icon: "circle-outline"
                id: but3
                font_style: "Button"
                text: "Purple"
                on_release:
                    root.ColorSelect(but3)

            MDFillRoundFlatIconButton:
                md_bg_color: C('#1565c0')
                icon: "circle-outline"
                id: but4
                font_style: "Button"
                text: "Blue"
                on_release:
                    root.ColorSelect(but4)

            MDFillRoundFlatIconButton:
                md_bg_color: C('#2e7d32')
                icon: "circle-outline"
                id: but5
                font_style: "Button"
                text: "Green"
                on_release:
                    root.ColorSelect(but5)

            MDFillRoundFlatIconButton:
                md_bg_color: C('#f9a825')
                icon: "circle-outline"
                id: but6
                font_style: "Button"
                text: "Yellow"
                on_release:
                    root.ColorSelect(but6)

            MDFillRoundFlatIconButton:
                md_bg_color: C('#ef6c00')
                icon: "circle-outline"
                id: but7
                font_style: "Button"
                text: "Orange"
                on_release:
                    root.ColorSelect(but7)

            MDFillRoundFlatIconButton:
                md_bg_color: C('#4e342e')
                icon: "circle-outline"
                id: but8
                font_style: "Button"
                text: "Brown"
                on_release:
                    root.ColorSelect(but8)

            MDFillRoundFlatIconButton:
                md_bg_color: C('#424242')
                icon: "circle-outline"
                id: but9
                font_style: "Button"
                text: "Grey"
                on_release:
                    root.ColorSelect(but9)

        MDBoxLayout:

        MDBottomAppBar:
            MDToolbar:
                icon: "square-rounded-outline"
                type: "bottom"
                on_action_button: app.on_pause()
                left_action_items: [["chevron-left", lambda x: root.previousscreen()]]
                right_action_items: [["chevron-right", lambda x: root.nextscreen()]]