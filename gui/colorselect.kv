<ColorSelectScreen>:
    name: "colorselect"

    AnchorLayout:
        Image:
            size_hint: None, None
            size: 1644, 3840
            source: "images/defaultback.png"

    MDBoxLayout:
        orientation: "vertical"

        MDToolbar:
            title: "C0de.Net"
            right_action_items: [["information-outline", lambda x: root.openinfo()], ["refresh", lambda x: root.RefreshTracker()]]

        MDBoxLayout:
            orientation: "vertical"
            spacing: "8dp"
            padding: "8dp"

            MDLabel:
                adaptive_height: True
                text_color: C("FFFFFF")
                theme_text_color: "Custom"
                font_style: "H4"
                text: "Color Select"
                halign: "center"

            MDSeparator:
                color: C("FFFFFF")

            MDLabel:
                adaptive_height: True
                text_color: app.theme_cls.primary_color
                theme_text_color: "Custom"
                font_style: 'Subtitle1'
                text: "Select your [color=#FFFFFF]color[/color], then select the color of the [color=#FFFFFF]following[/color] player to the [color=#FFFFFF]left[/color] of you, continuing [color=#FFFFFF]clockwise[/color]."
                halign: "center"
                markup: True

            MDBoxLayout:
                size_hint: 1, 0.28

            MDLabel:
                id: remainder
                height: self.texture_size[1]
                adaptive_height: True
                text_color: C('FFFFFF')
                theme_text_color: "Custom"
                font_style: 'Subtitle2'
                halign: "center"
                markup: True

            MDBoxLayout:
                size_hint: 1, 0.3

            MDGridLayout:
                cols: 3
                spacing: "8dp"

                MDFillRoundFlatIconButton:
                    icon: "circle-outline"
                    id: but1
                    font_style: "Button" #800
                    md_bg_color: C('#c62828')
                    text: "Red"
                    on_release:
                        root.ColorSelect(but1)

                MDFillRoundFlatIconButton:
                    md_bg_color: C('#ad1457')
                    icon: "circle-outline"
                    id: but2
                    font_style: "Button"
                    text: "Pink"
                    on_release:
                        root.ColorSelect(but2)

                MDFillRoundFlatIconButton:
                    md_bg_color: C('#6a1b9a')
                    icon: "circle-outline"
                    id: but3
                    font_style: "Button"
                    text: "Purple"
                    on_release:
                        root.ColorSelect(but3)

                MDFillRoundFlatIconButton:
                    md_bg_color: C('#1565c0')
                    icon: "circle-outline"
                    id: but4
                    font_style: "Button"
                    text: "Blue"
                    on_release:
                        root.ColorSelect(but4)

                MDFillRoundFlatIconButton:
                    md_bg_color: C('#2e7d32')
                    icon: "circle-outline"
                    id: but5
                    font_style: "Button"
                    text: "Green"
                    on_release:
                        root.ColorSelect(but5)

                MDFillRoundFlatIconButton:
                    md_bg_color: C('#f9a825')
                    icon: "circle-outline"
                    id: but6
                    font_style: "Button"
                    text: "Yellow"
                    on_release:
                        root.ColorSelect(but6)

                MDFillRoundFlatIconButton:
                    md_bg_color: C('#ef6c00')
                    icon: "circle-outline"
                    id: but7
                    font_style: "Button"
                    text: "Orange"
                    on_release:
                        root.ColorSelect(but7)

                MDFillRoundFlatIconButton:
                    md_bg_color: C('#4e342e')
                    icon: "circle-outline"
                    id: but8
                    font_style: "Button"
                    text: "Brown"
                    on_release:
                        root.ColorSelect(but8)

                MDFillRoundFlatIconButton:
                    md_bg_color: C('#424242')
                    icon: "circle-outline"
                    id: but9
                    font_style: "Button"
                    text: "Grey"
                    on_release:
                        root.ColorSelect(but9)

        MDBoxLayout:
            size_hint: 1, 0.7

        MDBottomAppBar:
            MDToolbar:
                id: colorbottomtoolbar
                icon: "square-rounded-outline"
                type: "bottom"
                on_action_button: app.on_pause()
                left_action_items: [["chevron-left", lambda x: root.previousscreen()]]