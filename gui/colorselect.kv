<ColorSelectScreen>
    name: "colorselect"

    AnchorLayout
        Image:
            size_hint: None, None
            size: 1644, 3840
            source: "images/defaultback.png"

    MDBoxLayout:
        padding: 5
        orientation: "vertical"

        MDBoxLayout:

        MDLabel:
            text_color: app.theme_cls.primary_color
            theme_text_color: "Custom"
            font_style: 'Subtitle1'
            halign: "center"
            text: "Now select the [color=#FFFFFF]colors[/color] that are in play starting with [color=#FFFFFF]your[/color] choice, following by the player to the [color=#FFFFFF]left[/color] of you and continuing [color=#FFFFFF]clockwise[/color]."
            markup: True

        MDBoxLayout:

        MDGridLayout:
            cols: 3
            rows: 3
            spacing: 5

            MDFillRoundFlatIconButton:
                icon: "brush"
                id: but1
                font_style: "Button"
                md_bg_color: C('#b71c1c')
                text: "Red"
                on_release:
                    root.ColorSelect(but1)

            MDFillRoundFlatIconButton:
                md_bg_color: C('#880e4f')
                icon: "brush"
                id: but2
                font_style: "Button"
                text: "Pink"
                on_release:
                    root.ColorSelect(but2)

            MDFillRoundFlatIconButton:
                md_bg_color: C('#4a148c')
                icon: "brush"
                id: but3
                font_style: "Button"
                text: "Purple"
                on_release:
                    root.ColorSelect(but3)

            MDFillRoundFlatIconButton:
                md_bg_color: C('#0d47a1')
                icon: "brush"
                id: but4
                font_style: "Button"
                text: "Blue"
                on_release:
                    root.ColorSelect(but4)

            MDFillRoundFlatIconButton:
                md_bg_color: C('#1b5e20')
                icon: "brush"
                id: but5
                font_style: "Button"
                text: "Green"
                on_release:
                    root.ColorSelect(but5)

            MDFillRoundFlatIconButton:
                md_bg_color: C('#f9a825')
                icon: "brush"
                id: but6
                font_style: "Button"
                text: "Yellow"
                on_release:
                    root.ColorSelect(but6)

            MDFillRoundFlatIconButton:
                md_bg_color: C('#ef6c00')
                icon: "brush"
                id: but7
                font_style: "Button"
                text: "Orange"
                on_release:
                    root.ColorSelect(but7)

            MDFillRoundFlatIconButton:
                md_bg_color: C('#3e2723')
                icon: "brush"
                id: but8
                font_style: "Button"
                text: "Brown"
                on_release:
                    root.ColorSelect(but8)

            MDFillRoundFlatIconButton:
                md_bg_color: C('#212121')
                icon: "brush"
                id: but9
                font_style: "Button"
                text: "Grey"
                on_release:
                    root.ColorSelect(but9)

        MDIconButton:
            icon: "refresh"
            md_bg_color: app.theme_cls.primary_dark
            font_style: "Button"
            pos_hint: {"right": 1}

#TODO: need to use dp to set sizes for buttons, starting to look bad. Also this button doesnt carry text font.

        MDBoxLayout:
        MDBoxLayout:

            MDFillRoundFlatButton:
                md_bg_color: app.theme_cls.primary_dark
                font_style: "Button"
                text: "Go Back"
                size_hint: 1, 0.85
                on_release:
                    root.ClearTracker()
                    app.root.current = "player"
                    root.manager.transition.direction = "right"