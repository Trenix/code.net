<ColorSelectScreen>
    name: "colorselect"

    AnchorLayout
        Image:
            size_hint: None, None
            size: 1644, 3840
            source: "images/defaultback.png"

    MDBoxLayout:
        padding: 5
        spacing: 5
        orientation: "vertical"

        MDBoxLayout:
            size_hint: None, 0.85

        MDLabel:
            text_color: app.theme_cls.primary_color
            theme_text_color: "Custom"
            font_style: 'Subtitle1'
            halign: "center"
            text: "Select the [color=#FFFFFF]colors[/color] that are in play starting with [color=#FFFFFF]your[/color] choice, following by the player to the [color=#FFFFFF]left[/color] of you and continuing [color=#FFFFFF]clockwise[/color].\n"
            markup: True

        MDGridLayout:
            cols: 3
            spacing: 5

            MDFillRoundFlatIconButton:
                icon: "brush"
                id: but1
                font_style: "Button" #800
                md_bg_color: C('#c62828')
                text: "Red"
                on_release:
                    root.ColorSelect(but1)

            MDFillRoundFlatIconButton:
                md_bg_color: C('#ad1457')
                icon: "brush"
                id: but2
                font_style: "Button"
                text: "Pink"
                on_release:
                    root.ColorSelect(but2)

            MDFillRoundFlatIconButton:
                md_bg_color: C('#6a1b9a')
                icon: "brush"
                id: but3
                font_style: "Button"
                text: "Purple"
                on_release:
                    root.ColorSelect(but3)

            MDFillRoundFlatIconButton:
                md_bg_color: C('#1565c0')
                icon: "brush"
                id: but4
                font_style: "Button"
                text: "Blue"
                on_release:
                    root.ColorSelect(but4)

            MDFillRoundFlatIconButton:
                md_bg_color: C('#2e7d32')
                icon: "brush"
                id: but5
                font_style: "Button"
                text: "Green"
                on_release:
                    root.ColorSelect(but5)

            MDFillRoundFlatIconButton:
                md_bg_color: C('#f9a825')
                icon: "brush"
                id: but6
                font_style: "Button"
                text: "Yellow"
                on_release:
                    root.ColorSelect(but6)

            MDFillRoundFlatIconButton:
                md_bg_color: C('#ef6c00')
                icon: "brush"
                id: but7
                font_style: "Button"
                text: "Orange"
                on_release:
                    root.ColorSelect(but7)

            MDFillRoundFlatIconButton:
                md_bg_color: C('#4e342e')
                icon: "brush"
                id: but8
                font_style: "Button"
                text: "Brown"
                on_release:
                    root.ColorSelect(but8)

            MDFillRoundFlatIconButton:
                md_bg_color: C('#424242')
                icon: "brush"
                id: but9
                font_style: "Button"
                text: "Grey"
                on_release:
                    root.ColorSelect(but9)

        MDIconButton:
            theme_text_color: "Custom"
            icon: "refresh"
            md_bg_color: app.theme_cls.primary_color
            text_color: C("#FFFFFF")
            pos_hint: {"center_x": 0.5, "center_y": 0.5}
            on_press:
                root.RefreshTracker()

        MDBoxLayout:
        MDBoxLayout:

        #TODO: Do not go to reveal screen until players have colors set.

            MDFillRoundFlatButton:
                md_bg_color: app.theme_cls.primary_color
                font_style: "Button"
                text: "Continue"
                size_hint: 1, 0.8
                on_release:
                    root.ClearTracker()
                    app.root.current = "reveal"
                    root.manager.transition.direction = "left"