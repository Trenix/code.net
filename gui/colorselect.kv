<ColorSelectScreen>
    name: "colorselect"

    AnchorLayout
        Image:
            size_hint: None, None
            size: 1644, 3840
            source: "images/defaultback.png"

    MDBoxLayout:
        padding: 5
        orientation: "vertical"

        MDBoxLayout:

        MDLabel:
            text_color: app.theme_cls.primary_color
            theme_text_color: "Custom"
            font_style: 'Subtitle1'
            halign: "center"
            text: "Now select the [color=#FFFFFF]colors[/color] that are in play starting with [color=#FFFFFF]your[/color] choice, following by the player to the [color=#FFFFFF]left[/color] of you and continuing [color=#FFFFFF]clockwise[/color]."
            markup: True

        MDBoxLayout:

        MDGridLayout:
            cols: 3
            rows: 3
            spacing: 5

            MDFillRoundFlatIconButton:
                icon: "brush"
                id: but1
                font_style: "Button"
                md_bg_color: C('#b71c1c')
                text: "Red"
                on_release:
                    root.fourp()
                    app.root.current = "colorselect"
                    root.manager.transition.direction = "left"

            MDFillRoundFlatIconButton:
