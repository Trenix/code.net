<AlignmentsScreen@MDScreen>:
    name: "Alignments"

    MDBoxLayout:
        orientation: "vertical"

        MDTopAppBar:
            title: "Alignments"
            left_action_items: [["menu", lambda x: app.root.get_screen("maininfo").ids.nav_drawer.set_state("open")]]
            right_action_items: [["close", lambda x: app.root.get_screen("maininfo").close()]]

        ScrollView:
            bar_width: "8dp"
            bar_color: C('FFFFFF')

            MDBoxLayout:
                orientation: "vertical"
                size_hint: None, None
                height: self.minimum_height
                size: (root.width, root.height)
                spacing: "8dp"
                padding: "8dp"

                MDLabel:
                    adaptive_height: True
                    text_color: C('FFFFFF')
                    theme_text_color: "Custom"
                    font_style: 'H6'
                    text: "Introduction"

                MDLabel:
                    adaptive_height: True
                    text_color: app.theme_cls.primary_color
                    theme_text_color: "Custom"
                    font_style: 'Body2'
                    text: "Players are split up into two different alignments, hackers and coders. You must identify and work with your own alignment to achieve maximum points. On the left side of the main screen an indicator will reveal you how many hackers and coders are present within the game."

                MDSeparator:
                    color: C("FFFFFF")

                MDLabel:
                    adaptive_height: True
                    text_color: C('FFFFFF')
                    theme_text_color: "Custom"
                    font_style: 'H6'
                    text: "Legend"

                MDLabel:
                    text_color: C("FFFFFF")
                    font_style: "Body2"
                    text: f"[color={app.globals.colordefs['Red']}][size=22sp][font=Icons]{md_icons['shield-bug']}[/font][/size][/color]: Hacker"
                    theme_text_color: "Custom"
                    adaptive_height: True
                    markup: True

                MDLabel:
                    text_color: C("FFFFFF")
                    font_style: "Body2"
                    text: f"[color={app.globals.colordefs['Blue']}][size=22sp][font=Icons]{md_icons['shield-lock']}[/font][/size][/color]: Coder"
                    theme_text_color: "Custom"
                    adaptive_height: True
                    markup: True

                MDGridLayout:
                    adaptive_height: True
                    cols: 1
                    canvas.before:
                        Color:
                            rgba: 51/255, 255/255, 51/255, 0.3
                        Line:
                            width: dp(0.3)
                            rectangle: self.x, self.y, self.width, self.height
                        Color:
                            rgba: 51/255, 255/255, 51/255, 0.06
                        Rectangle:
                            pos: self.pos
                            size: self.size

    # 4 Players
                    MDBoxLayout:
                        adaptive_height: True
                        spacing: "8dp"

                        Widget:

                        MDLabel:
                            size_hint_x: None
                            width: self.texture_size[0]
                            text_size: None, None
                            text_color: C("FFFFFF")
                            font_style: "Body2"
                            text: f"[font=Icons][size=22sp]{md_icons['account-group']}[/font][/size] 4 Players:"
                            theme_text_color: "Custom"
                            adaptive_height: True
                            markup: True

                        MDIcon:
                            icon: "shield-bug"
                            text_color: C(app.globals.colordefs['Red'])
                            theme_text_color: "Custom"
                            adaptive_height: True
                            badge_icon: 'numeric-2-circle-outline'
                            badge_bg_color: C('000000')
                            badge_icon_color: C(app.globals.colordefs['Red'])

                        MDIcon:
                            icon: "shield-lock"
                            text_color: C(app.globals.colordefs['Blue'])
                            theme_text_color: "Custom"
                            adaptive_height: True
                            badge_icon: 'numeric-3-circle-outline'
                            badge_bg_color: C('000000')
                            badge_icon_color: C(app.globals.colordefs['Blue'])

