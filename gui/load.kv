<LoadingScreen>:
    name: "load"

    AnchorLayout:
        Image:
            size_hint: None, None
            size: 1644, 3840
            source: "images/defaultback.png"

    MDBoxLayout:
        orientation: "vertical"

        Widget:

        Image:
            pos_hint: {"center_x":0.5, "center_y":0.5}
            size_hint: 0.7, 0.4
            source: "images/logo.png"

        MDProgressBar:
            size_hint: 0.5, 0.01
            pos_hint: {"center_x":0.5, "center_y":0.5}
            id: loadbar
            type: "determinate"
            running_duration: 2.4
            size: self.size
            color: app.theme_cls.primary_color

        Widget: