<PlayerWindow>:
    name: "player"

    AnchorLayout
        Image:
            size_hint: None, None
            size: 1644, 3840
            source: "images/defaultback.png"

    MDBoxLayout:
        padding: 5
        orientation: "vertical"

        MDBoxLayout:

        MDLabel:
            text_color: app.theme_cls.primary_color
            theme_text_color: "Custom"
            font_style: 'Subtitle1'
            halign: "center"
            text: "Greetings [color=#FFFFFF]host[/color],\nhow many [color=#FFFFFF]players[/color] are playing?"
            markup: True

        MDBoxLayout:

        MDGridLayout:
            cols: 3
            rows: 2
            spacing: 5

            MDFillRoundFlatIconButton:
                icon: "robot"
                id: butt1
                font_style: "Button"
                md_bg_color: app.theme_cls.primary_dark
                text: "4 Players"
                on_release:
                    root.fourp()
                    root.gridset()
                    app.root.current = "colorselect"
                    root.manager.transition.direction = "left"

            MDFillRoundFlatIconButton:
                icon: "robot"
                id: butt2
                font_style: "Button"
                md_bg_color: app.theme_cls.primary_dark
                text: "5 Players"
                on_release:
                    root.fivep()
                    root.gridset()
                    app.root.current = "colorselect"
                    root.manager.transition.direction = "left"

            MDFillRoundFlatIconButton:
                icon: "account-group"
                id: butt3
                font_style: "Button"
                md_bg_color: app.theme_cls.primary_dark
                text: "6 Players"
                on_release:
                    root.sixp()
                    root.gridset()
                    app.root.current = "colorselect"
                    root.manager.transition.direction = "left"

            MDFillRoundFlatIconButton:
                icon: "account-group"
                id: butt4
                font_style: "Button"
                md_bg_color: app.theme_cls.primary_dark
                text: "7 Players"
                on_release:
                    root.sevenp()
                    root.gridset()
                    app.root.current = "colorselect"
                    root.manager.transition.direction = "left"

            MDFillRoundFlatIconButton:
                icon: "account-group"
                id: butt5
                font_style: "Button"
                md_bg_color: app.theme_cls.primary_dark
                text: "8 Players"
                on_release:
                    root.eightp()
                    root.gridset()
                    app.root.current = "colorselect"
                    root.manager.transition.direction = "left"

            MDFillRoundFlatIconButton:
                icon: "account-group"
                id: butt6
                font_style: "Button"
                md_bg_color: app.theme_cls.primary_dark
                text: "9 Players"
                on_release:
                    root.ninep()
                    root.gridset()
                    app.root.current = "colorselect"
                    root.manager.transition.direction = "left"

        MDBoxLayout:
        MDBoxLayout:
        MDBoxLayout:

            MDFillRoundFlatButton:
                md_bg_color: app.theme_cls.primary_dark
                font_style: "Button"
                text: "Go Back"
                size_hint: 1, 1
                on_release:
                    app.root.current = "welcome"
                    root.manager.transition.direction = "right"