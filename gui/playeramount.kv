<PlayerWindow>:
    name: "player"

    AnchorLayout
        Image:
            size_hint: None, None
            size: 1644, 3840
            source: "images/defaultback.png"

    MDBoxLayout:
        padding: 5
        orientation: "vertical"

        MDBoxLayout:

        MDLabel:
            text_color: app.theme_cls.primary_color
            theme_text_color: "Custom"
            font_style: 'Subtitle1'
            halign: "center"
            text: "Greetings [color=#FFFFFF]host[/color],\nhow many [color=#FFFFFF]players[/color] are playing?"
            markup: True

        MDBoxLayout:

        MDGridLayout:
            cols: 3
            rows: 2
            spacing: 5

            MDFillRoundFlatIconButtonToggle:
                icon: "robot"
                group: "player"
                id: butt1
                font_style: "Button"
                md_bg_color: app.theme_cls.primary_color
                text: "4 Players"

            MDFillRoundFlatIconButtonToggle:
                icon: "robot"
                group: "player"
                id: butt2
                font_style: "Button"
                md_bg_color: app.theme_cls.primary_color
                text: "5 Players"

            MDFillRoundFlatIconButtonToggle:
                icon: "account-group"
                group: "player"
                id: butt3
                font_style: "Button"
                md_bg_color: app.theme_cls.primary_color
                text: "6 Players"

            MDFillRoundFlatIconButtonToggle:
                icon: "account-group"
                group: "player"
                id: butt4
                font_style: "Button"
                md_bg_color: app.theme_cls.primary_color
                text: "7 Players"

            MDFillRoundFlatIconButtonToggle:
                icon: "account-group"
                group: "player"
                id: butt5
                font_style: "Button"
                md_bg_color: app.theme_cls.primary_color
                text: "8 Players"

            MDFillRoundFlatIconButtonToggle:
                icon: "account-group"
                group: "player"
                id: butt6
                font_style: "Button"
                md_bg_color: app.theme_cls.primary_color
                text: "9 Players"

        MDBoxLayout:
        MDBoxLayout:
        MDBoxLayout:

            MDFillRoundFlatButton:
                id: proceed
                size_hint: 1, 1
                md_bg_color: app.theme_cls.primary_color
                font_style: "Button"
                text: "Continue"
                on_release:
                    root.setplayervars()