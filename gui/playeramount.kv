<PlayerWindow>:
    name: "player"

    Background:

    MDBoxLayout:
        orientation: "vertical"

        MDToolbar:
            title: "C0de.Net"
            right_action_items: [["information-outline", lambda x: root.openinfo()]]

        MDBoxLayout:
            orientation: "vertical"
            spacing: "8dp"
            padding: "8dp"

            MDLabel:
                adaptive_height: True
                text_color: C("FFFFFF")
                theme_text_color: "Custom"
                font_style: "H4"
                text: "Player Amount"
                halign: "center"

            MDSeparator:
                color: C("FFFFFF")

            MDLabel:
                adaptive_height: True
                text_color: app.theme_cls.primary_color
                theme_text_color: "Custom"
                font_style: 'Subtitle1'
                text: "Please select the [color=#FFFFFF]amount[/color] of [color=#FFFFFF]players[/color] that are currently playing."
                halign: "center"
                markup: True

            MDBoxLayout:
                size_hint: 1, 0.7

            MDGridLayout:
                cols: 2
                spacing: "8dp"

                MDFillRoundFlatIconButtonToggle:
                    icon: "account-group"
                    group: "player"
                    id: butt1
                    font_style: 'Button'
                    md_bg_color: app.theme_cls.primary_color
                    text: "4 players"
                    rounded_button: False
                    on_press:
                        root.selectcheck(butt1)

                MDFillRoundFlatIconButtonToggle:
                    icon: "account-group"
                    group: "player"
                    id: butt2
                    font_style: 'Button'
                    md_bg_color: app.theme_cls.primary_color
                    text: "5 players"
                    rounded_button: False
                    on_press:
                        root.selectcheck(butt2)

                MDFillRoundFlatIconButtonToggle:
                    icon: "account-group"
                    group: "player"
                    id: butt3
                    font_style: 'Button'
                    md_bg_color: app.theme_cls.primary_color
                    text: "6 players"
                    rounded_button: False
                    on_press:
                        root.selectcheck(butt3)

                MDFillRoundFlatIconButtonToggle:
                    icon: "account-group"
                    group: "player"
                    id: butt4
                    font_style: 'Button'
                    md_bg_color: app.theme_cls.primary_color
                    text: "7 Players"
                    rounded_button: False
                    on_press:
                        root.selectcheck(butt4)

                MDFillRoundFlatIconButtonToggle:
                    icon: "account-group"
                    group: "player"
                    id: butt5
                    font_style: "Button"
                    md_bg_color: app.theme_cls.primary_color
                    text: "8 Players"
                    rounded_button: False
                    on_press:
                        root.selectcheck(butt5)

                MDFillRoundFlatIconButtonToggle:
                    icon: "account-group"
                    group: "player"
                    id: butt6
                    font_style: "Button"
                    md_bg_color: app.theme_cls.primary_color
                    text: "9 Players"
                    rounded_button: False
                    on_press:
                        root.selectcheck(butt6)

        Widget:
            size_hint: 1, 0.6

        MDBottomAppBar:
            MDToolbar:
                id: bottomplayertoolbar
                icon: "square-rounded-outline"
                type: "bottom"
                on_action_button: app.on_pause()
                left_action_items: [["chevron-left", lambda x: root.previousscreen()]]