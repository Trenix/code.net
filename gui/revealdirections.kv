<PlayerReveal>
    name: "reveal"

    AnchorLayout
        Image:
            size_hint: None, None
            size: 1644, 3840
            source: "images/defaultback.png"

    MDBoxLayout:
        orientation: "vertical"
        padding: 5

        MDLabel:
            id: whatplayer
            text_color: app.theme_cls.primary_color
            theme_text_color: "Custom"
            font_style: 'Subtitle1'
            text: "Pass the phone to Player 1."
            halign: "center"

        MDFillRoundFlatButton:
            id: endreveal
            md_bg_color: app.theme_cls.primary_color
            text: "Reveal"
            font_style: "Button"
            size_hint: 1, 0.18
            on_release:
                root.reveal()