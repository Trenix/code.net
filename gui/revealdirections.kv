<PlayerReveal>
    name: "reveal"

    AnchorLayout
        Image:
            size_hint: None, None
            size: 1644, 3840
            source: "images/defaultback.png"

    MDBoxLayout:
        orientation: "vertical"
        MDToolbar:
            title: "C0de.Net"
            left_action_items: [["menu", lambda x: x]]

        MDStackLayout:
            spacing: 10
            padding: 21

            MDLabel:
                adaptive_height: True
                text_color: C("FFFFFF")
                theme_text_color: "Custom"
                font_style: "H4"
                text: "Role Reveal"
                halign: "center"

            MDSeparator:
                color: C("FFFFFF")

            MDLabel:
                text: "Please follow the [color=#FFFFFF]tracker[/color] below and [color=#FFFFFF]press[/color] the [color=#FFFFFF]button[/color] at the bottom when it's your [color=#FFFFFF]turn[/color] to check your [color=#FFFFFF]role[/color]."
                adaptive_height: True
                text_color: app.theme_cls.primary_color
                theme_text_color: "Custom"
                font_style: 'Subtitle1'
                halign: "center"
                markup: True

        MDBoxLayout:
            padding: 10

            MDGridLayout:
                canvas.before:
                    Color:
                        rgba: 51/255, 255/255, 51/255, 0.3
                    Line:
                        width: 0.3
                        rectangle: self.x, self.y, self.width, self.height
                    Color:
                        rgba: 51/255, 255/255, 51/255, 0.06
                    Rectangle:
                        pos: self.pos
                        size: self.size
                id: setgrid
                adaptive_height: True
                padding: 20
                spacing: 10
                cols: 9

                MDIcon:
                    id: ind1
                    theme_text_color: "Custom"
                    icon: "circle-slice-8"
                    font_size: 30
                    halign: "center"

                MDIcon:
                    id: ind2
                    font_size: 30
                    theme_text_color: "Custom"
                    icon: "circle-outline"
                    halign: "center"

                MDIcon:
                    id: ind3
                    font_size: 30
                    theme_text_color: "Custom"
                    icon: "circle-outline"
                    halign: "center"

                MDIcon:
                    id: ind4
                    font_size: 30
                    theme_text_color: "Custom"
                    icon: "circle-outline"
                    halign: "center"

                MDIcon:
                    id: ind5
                    font_size: 30
                    theme_text_color: "Custom"
                    icon: "circle-outline"
                    halign: "center"

                MDIcon:
                    id: ind6
                    font_size: 30
                    theme_text_color: "Custom"
                    icon: "circle-outline"
                    halign: "center"

                MDIcon:
                    id: ind7
                    font_size: 30
                    theme_text_color: "Custom"
                    icon: "circle-outline"
                    halign: "center"

                MDIcon:
                    id: ind8
                    font_size: 30
                    theme_text_color: "Custom"
                    icon: "circle-outline"
                    halign: "center"

                MDIcon:
                    id: ind9
                    font_size: 30
                    theme_text_color: "Custom"
                    icon: "circle-outline"
                    halign: "center"

        MDBoxLayout:
            size_hint: 1, 0.5
        MDBoxLayout:
        MDBoxLayout:
        MDBoxLayout:

        MDBottomAppBar:
            MDToolbar:
                id: revtool
                icon: "account-search"
                type: "bottom"
                on_action_button: root.reveal()
