<WelcomeWindow>:
    name: "welcome"

    Background:

    MDBoxLayout:
        orientation: "vertical"

        MDTopAppBar:
            title: "C0de.Net"
            right_action_items: [["information-outline", lambda x: root.openinfo()]]

        MDBoxLayout:
            orientation: "vertical"
            spacing: "8dp"
            padding: "8dp", "8dp", "8dp", "60dp"

            MDLabel:
                adaptive_height: True
                text_color: C("FFFFFF")
                theme_text_color: "Custom"
                font_style: "H4"
                text: "Welcome"
                halign: "center"

            MDSeparator:
                color: C("FFFFFF")

            MDLabel:
                adaptive_height: True
                text_color: app.theme_cls.primary_color
                theme_text_color: "Custom"
                font_style: 'Subtitle2'
                text: "Welcome to [color=#FFFFFF]C0de.Net[/color], a [color=#FFFFFF]social deduction[/color] card game that [color=#FFFFFF]must[/color] be used with this [color=#FFFFFF]app[/color] to function properly. This App is still [color=#FFFFFF]under development[/color]; therefore, you may experience lack of [color=#FFFFFF]content[/color], incomplete [color=#FFFFFF]features[/color], and [color=#FFFFFF]bugs[/color]."
                halign: "center"
                markup: True

            Widget:

            MDLabel:
                text_color: app.theme_cls.primary_color
                theme_text_color: "Custom"
                font_style: "Caption"
                halign: "center"
                text: "Created by [color=#FFFFFF]Plague Products[/color]. All rights reserved."
                markup: True
                adaptive_height: True

        MDBottomAppBar:
            MDTopAppBar:
                icon: "square-rounded-outline"
                type: "bottom"
                on_action_button: app.on_pause()
                right_action_items: [["chevron-right", lambda x: root.nextscreen()]]