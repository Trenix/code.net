<WelcomeWindow>:
    #md_bg_color: app.theme_cls.opposite_bg_darkest

    name: "welcome"

    MDBoxLayout:
        orientation: "vertical"
        MDBoxLayout:
            orientation: "vertical"
            padding: 30

            MDLabel:
                font_style: "H1"
                halign: "center"
                underline: True
                text: "[color=#03A062]C0de.Net[/color]"
                markup: True

            MDLabel:
              #  font_style: 'Subtitle1'
                text: "Welcome to a social card game that requires an App to play. The App is still in its Alpha phase therefore, you may experience lack of content, incomplete features, and bugs."
                pos_hint: {"center_x":0.5, "top":1}
                text_size: self.size
                halign: "center"
            MDBoxLayout:

        MDBoxLayout:
            orientation: "vertical"

            MDLabel:
                text_size: self.size
                halign: "center"
                text: "Created by Plague Products. All rights reserved."
                pos_hint: {"center_x":0.5, "center_y":0.25}

            Button:
                text: "New Game"
                size_hint: 1, 0.61
                pos_hint: {"center_x":0.5, "bottom":1}
                on_release:
                    app.root.current = "player"
                    app.root.transition.direction = "left"