#:include gui\informationscreens\LoreScreen.kv
#:include gui\informationscreens\AlignmentsScreen.kv
#:include gui\informationscreens\PlayersScreen.kv
#:include gui\informationscreens\RoundsScreen.kv
#:include gui\informationscreens\ActionsScreen.kv
#:include gui\informationscreens\LogsScreen.kv

<MainInfo>:
    name: "maininfo"

    AnchorLayout:
        Image:
            size_hint: None, None
            size: 1644, 3840
            source: "images/defaultback.png"

    MDNavigationLayout:
        ScreenManager:
            id: maininfoscreenmanager

            LoreScreen:
            AlignmentsScreen:
            PlayersScreen:
            RoundsScreen:
            ActionsScreen:
            LogsScreen:

        MDNavigationDrawer:
            size_hint: 0.6, 1
            padding: "8dp"
            spacing: "8dp"
            id: nav_drawer
            md_bg_color: app.theme_cls.primary_color

            ScrollView:
                MDList:
                    OneLineListItem:
                        text: f"[size=26][font=Icons]{md_icons['information-outline']}[/font][/size] [size=19]Information[/size]"
                        theme_text_color: "Custom"
                        text_color: C('FFFFFF')
                        on_release:
                            nav_drawer.set_state("close")

                    OneLineListItem:
                        text_color: C('FFFFFF')
                        text: f"[size=22][font=Icons]{md_icons['book']}[/font][/size] Lore"
                        theme_text_color: "Custom"
                        markup: True

                        on_release:
                            nav_drawer.set_state("close")
                            maininfoscreenmanager.current = "Lore"

                    OneLineListItem:
                        text_color: C('FFFFFF')
                        text: f"[size=22][font=Icons]{md_icons['shield']}[/font][/size] Alignments"
                        theme_text_color: "Custom"
                        markup: True

                        on_release:
                            nav_drawer.set_state("close")
                            maininfoscreenmanager.current = "Alignments"

                    OneLineListItem:
                        text_color: C('FFFFFF')
                        text: f"[size=22][font=Icons]{md_icons['account']}[/font][/size] Players"
                        theme_text_color: "Custom"
                        markup: True

                        on_release:
                            nav_drawer.set_state("close")
                            maininfoscreenmanager.current = "Players"

                    OneLineListItem:
                        text_color: C('FFFFFF')
                        text: f"[size=22][font=Icons]{md_icons['timer']}[/font][/size] Rounds"
                        theme_text_color: "Custom"
                        markup: True

                        on_release:
                            nav_drawer.set_state("close")
                            maininfoscreenmanager.current = "Rounds"

                    OneLineListItem:
                        text_color: C('FFFFFF')
                        text: f"[size=22][font=Icons]{md_icons['file-code']}[/font][/size] Actions"
                        theme_text_color: "Custom"
                        markup: True

                        on_release:
                            nav_drawer.set_state("close")
                            maininfoscreenmanager.current = "Actions"

                    OneLineListItem:
                        text_color: C('FFFFFF')
                        text: f"[size=22][font=Icons]{md_icons['folder']}[/font][/size] Logs"
                        theme_text_color: "Custom"
                        markup: True

                        on_release:
                            nav_drawer.set_state("close")
                            maininfoscreenmanager.current = "Log"