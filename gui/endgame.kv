<EndGame>:
    name: "endgame"

    Background:

    MDBoxLayout:
        orientation: "vertical"

        MDToolbar:
            title: "C0de.Net"
            right_action_items: [["information-outline", lambda x: root.openinfo()]]

        MDStackLayout:
            spacing: "8dp"
            padding: "8dp"

            MDLabel:
                adaptive_height: True
                text_color: C("FFFFFF")
                theme_text_color: "Custom"
                font_style: "H4"
                text: "Game Summary"
                halign: "center"

            MDSeparator:
                color: C("FFFFFF")

            MDLabel:
                adaptive_height: True
                text_color: C('FFFFFF')
                theme_text_color: "Custom"
                font_style: 'H5'
                text: "Alignments"

            MDBoxLayout:
                orientation: "vertical"
                adaptive_height: True
                canvas.before:
                    Color:
                        rgba: 51/255, 255/255, 51/255, 0.3
                    Line:
                        width: 0.3
                        rectangle: self.x, self.y, self.width, self.height
                    Color:
                        rgba: 51/255, 255/255, 51/255, 0.06
                    Rectangle:
                        pos: self.pos
                        size: self.size

                MDLabel:
                    id: hackers
                    adaptive_height: True
                    text_color: C('FFFFFF')
                    theme_text_color: "Custom"
                    font_style: 'Body1'
                    text: f" [color=#c62828][size=22sp][font=Icons]{md_icons['shield-bug']}[/font][/size][/color] Hackers: "
                    markup: True

                MDLabel:
                    id: coders
#                    md_bg_color: app.theme_cls.primary_dark
                    adaptive_height: True
                    text_color: C('FFFFFF')
                    theme_text_color: "Custom"
                    font_style: 'Body1'
                    text: f" [color=#1565c0][size=22sp][font=Icons]{md_icons['shield-lock']}[/font][/size][/color] Coders: "
                    markup: True

            MDSeparator:
                color: C("FFFFFF")

            MDLabel:
                adaptive_height: True
                text_color: C('FFFFFF')
                theme_text_color: "Custom"
                font_style: 'H5'
                text: "Actions"

            MDBoxLayout:
                orientation: "vertical"
                adaptive_height: True
                canvas.before:
                    Color:
                        rgba: 51/255, 255/255, 51/255, 0.3
                    Line:
                        width: 0.3
                        rectangle: self.x, self.y, self.width, self.height
                    Color:
                        rgba: 51/255, 255/255, 51/255, 0.06
                    Rectangle:
                        pos: self.pos
                        size: self.size

                MDLabel:
                    id: action_0
                    adaptive_height: True
                    text_color: C('FFFFFF')
                    theme_text_color: "Custom"
                    font_style: 'Body1'
                    markup: True

                MDLabel:
                    id: action_1
                    adaptive_height: True
                    text_color: C('FFFFFF')
                    theme_text_color: "Custom"
                    font_style: 'Body1'
                    markup: True

                MDLabel:
                    id: action_2
                    adaptive_height: True
                    text_color: C('FFFFFF')
                    theme_text_color: "Custom"
                    font_style: 'Body1'
                    markup: True

                MDLabel:
                    id: action_3
                    adaptive_height: True
                    text_color: C('FFFFFF')
                    theme_text_color: "Custom"
                    font_style: 'Body1'
                    markup: True

            MDSeparator:
                color: C("FFFFFF")

            AnchorLayout:
                anchor_x: 'center'
                anchor_y: 'top'
                adaptive_height: True

                MDFillRoundFlatButton:
                    text: "View Point Scoring"
                    theme_text_color: 'Custom'
                    font_style: 'Button'
                    text_color: C('#FFFFFF')
                    on_release:
                        app.globals.lastscreen = root.manager.current
                        root.manager.transition.direction = "up"
                        root.manager.current = "maininfo"
                        app.root.get_screen('maininfo').ids.maininfoscreenmanager.current = "Points"

        MDBottomAppBar:
            MDToolbar:
                icon: "autorenew"
                type: "bottom"
                on_action_button: root.opendialog()