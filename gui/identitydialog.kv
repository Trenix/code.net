<IdentityDialog>:
    name: "test"
    auto_dismiss: False
    size_hint: 0.8, 0.5

    MDCard:
        id: identity
        orientation: "vertical"
        padding: 21
        spacing: 8
        md_bg_color: app.theme_cls.primary_color

        MDLabel:
            text: "Identity"
            font_style: "H4"
            size_hint_y: None
            height: self.texture_size[1]
            halign: "center"
            theme_text_color: "Custom"
            text_color: C("FFFFFF")

        MDSeparator:
            color: C("FFFFFF")

        MDBoxLayout:
            size_hint: 1, 0.1

        MDLabel:
            id: whatcolor
            text_color: C("FFFFFF")
            font_style: "Subtitle1"
            theme_text_color: "Custom"
            adaptive_height: True
            markup: True

        MDLabel:
            id: arehacker
            text_color: C("FFFFFF")
            font_style: "Subtitle1"
            theme_text_color: "Custom"
            adaptive_height: True
            markup: True

        MDLabel:
            id: haveallies
            text_color: C("FFFFFF")
            font_style: "Subtitle1"
            theme_text_color: "Custom"
            adaptive_height: True
            markup: True

        MDLabel:
            id: identitydes
            font_style: "Subtitle1"
            theme_text_color: "Custom"
            text_color: C("FFFFFF")
            adaptive_height: True
            markup: True

        MDBoxLayout:

        MDRectangleFlatButton:
            font_style: "Button"
            theme_text_color: "Custom"
            pos_hint: {"center_x": 0.5, "center_y": 0.5}
            md_bg_color: app.theme_cls.primary_dark
            line_color: C("FFFFFF")
            text_color: C("FFFFFF")
            text: "OK"
            on_release:
                root.dismiss()