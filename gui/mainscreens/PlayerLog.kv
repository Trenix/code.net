<PlayerLogScreen>:
    name: "playerlogscreen"

    MDBoxLayout:
        orientation: "vertical"
        spacing: "8dp"
        padding: "8dp"

        Widget:
            size_hint: 1, 0.01

        MDFloatingLabel:
            adaptive_height: True
            text: "[font=H5][size=24sp]Player Logs[/size][/font]"
            theme_text_color: "Custom"
            markup: True
            text_color: C('#FFFFFF')
            pos_hint: {"center_x": 0.5}

        MDGridLayout:
            pos_hint: {"center_x": 0.5}
            canvas.before:
                Color:
                    rgba: 51/255, 255/255, 51/255, 0.3
                Line:
                    width: 1.3
                    rectangle: self.x, self.y, self.width, self.height
                Color:
                    rgba: 51/255, 255/255, 51/255, 0.06
                Rectangle:
                    pos: self.pos
                    size: self.size
            size_hint: 0.2, 0.8
            cols: 2

            AnchorLayout:
                MDIcon:
                    id: log1
                    theme_text_color: "Custom"
                    icon: "circle-slice-8"
                    font_size: "24sp"

            AnchorLayout:
                MDIcon:
                    id: log2
                    font_size: "24sp"
                    theme_text_color: "Custom"
                    icon: "circle-outline"

        Widget:
            size_hint: 1, 0.3

        MDLabel:
            id: nextplayer
            text_color: C("FFFFFF")
            halign: "center"
            theme_text_color: "Custom"
            font_style: "Subtitle1"
            adaptive_height: True

        Widget:
            size_hint: 1, 0.3

        MDFillRoundFlatIconButton:
            id: reveallog
            adaptive_height: True
            icon: "folder-search"
            text: "Reveal Log"
            pos_hint: {"center_x": 0.5}
            md_bg_color: app.theme_cls.primary_color
            font_style: "Button"
            on_release:
                root.beginreveal()

        Widget: