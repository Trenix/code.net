<ActionScreen>:
    name: "actionscreen"

    MDBoxLayout:
        orientation: "vertical"
        spacing: "8dp"
        padding: "8dp"

        Widget:
            size_hint: 1, 0.01

        MDFloatingLabel:
            adaptive_height: True
            text: "[font=H6][size=20sp]Actions[/size][/font]"
            theme_text_color: "Custom"
            markup: True
            text_color: C('#FFFFFF')
            pos_hint: {"center_x": 0.5}

        MDGridLayout:
            size_hint: None, None
            size: '216dp', '28dp'
            pos_hint: {"center_x": 0.5}
            canvas.before:
                Color:
                    rgba: 51/255, 255/255, 51/255, 0.3
                Line:
                    width: dp(1.2)
                    rectangle: self.x, self.y, self.width, self.height
                Color:
                    rgba: 51/255, 255/255, 51/255, 0.06
                Rectangle:
                    pos: self.pos
                    size: self.size
            cols: 4

            AnchorLayout:
                MDIcon:
                    id: act1
                    theme_text_color: "Custom"
                    icon: "circle-slice-8"
                    font_size: "24sp"
                    halign: "center"

            AnchorLayout:
                MDIcon:
                    id: act2
                    font_size: "24sp"
                    theme_text_color: "Custom"
                    icon: "circle-outline"
                    halign: "center"

            AnchorLayout:
                MDIcon:
                    id: act3
                    font_size: "24sp"
                    theme_text_color: "Custom"
                    icon: "circle-outline"
                    halign: "center"

            AnchorLayout:
                MDIcon:
                    id: act4
                    font_size: "24sp"
                    theme_text_color: "Custom"
                    icon: "circle-outline"
                    halign: "center"

        Widget:
            size_hint: 1, 0.3

        MDLabel:
            id: nextplayer
            text_color: C("FFFFFF")
            halign: "center"
            theme_text_color: "Custom"
            font_style: "Subtitle1"
            adaptive_height: True

        Widget:
            size_hint: 1, 0.3

        MDFillRoundFlatIconButton:
            id: useaction
            adaptive_height: True
            icon: "language-python"
            text: "Begin Action"
            pos_hint: {"center_x": 0.5}
            md_bg_color: app.theme_cls.primary_color
            font_style: "Button"
            on_release:
                root.beginaction()

        Widget: