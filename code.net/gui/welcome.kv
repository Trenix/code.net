<WelcomeWindow>:
    name: "welcome"

    FloatLayout:
        orientation: "vertical"

        Label:
            bold: True
            underline: True
            font_size: 70
            text: "Code.Net"
            size_hint: 0.2, 0.2
            pos_hint: {"center_x":0.5, "top":1}

        Label:
            text_size: self.size
            halign: "center"
            text: "A social deduction card game that requires an App to play. The App is still in its Alpha phase. Therefore, you may experience lack of features, incomplete features, and bugs."
            size_hint: 0.8, 0.3
            pos_hint: {"center_x":0.5, "top":1}


        Label:
            text_size: self.size
            halign: "center"
            text: "Created by Plague Products. All rights reserved."
            size_hint: 0.9, .1
            pos_hint: {"center_x":0.5, "center_y":0.25}


        Button:
            text: "New Game"
            size_hint: 1, 0.19
            pos_hint: {"center_x":0.5, "bottom":1}
            on_release:
                app.root.current = "player"
                root.manager.transition.direction = "left"