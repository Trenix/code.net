<LogDialog>:
    size_hint: 0.8, 0.54
    auto_dismiss: False

    MDCard:
        spacing: 10
        orientation: "vertical"
        padding: 21
        md_bg_color: app.theme_cls.primary_color
        border_radius: 20
        radius: [15]

        MDLabel:
            font_style: "H4"
            size_hint_y: None
            height: self.texture_size[1]
            halign: "center"
            theme_text_color: "Custom"
            text_color: C("FFFFFF")
            text: "Player Log"

        MDSeparator:
            color: C("FFFFFF")

        MDBoxLayout:
            size_hint: 1, 0.01

        MDBoxLayout:
            spacing: 4
            padding: 8, 0, 8, 8
            orientation: "vertical"
            canvas.before:
                Color:
                    rgba: C('#296f2c')
                Line:
                    width: 2.5
                    rectangle: self.x, self.y, self.width, self.height
                Color:
                    rgba: C('#236027')
                Rectangle:
                    pos: self.pos
                    size: self.size

            MDLabel:
                id: playerlogtitle
                font_style: "H6"
                adaptive_height: True
                theme_text_color: "Custom"
                halign: "center"
                text_color: C("FFFFFF")

            MDSeparator:
                adaptive_height: True
                color: C("FFFFFF")

            MDLabel:
                font_style: "Subtitle2"
                adaptive_height: True
                theme_text_color: "Custom"
                halign: "center"
                text_color: C("FFFFFF")
                text: "Only the player which owns the log may upload and see the results."

            MDBoxLayout:
                size_hint: 1, 0.01

            MDBoxLayout:
                orientation: "vertical"
                padding: 4, 0, 4, 0
                canvas.before:
                    Color:
                        rgba: 0/255, 0/255, 0/255, 0.8
                    Line:
                        width: 0.3
                        rectangle: self.x, self.y, self.width, self.height
                    Color:
                        rgba: 0/255, 0/255, 0/255, 0.5
                    Rectangle:
                        pos: self.pos
                        size: self.size

                MDLabel:
                    id: log1sub
                    markup: True
                    text_color: app.theme_cls.primary_color
                    theme_text_color: "Custom"
                    font_style: 'Subtitle2'
                    halign: "center"
                    text: f"[size=30][font=Icons]{md_icons['folder']}[/font] [font=Icons]{md_icons['folder']}[/font][/size]"

                MDLabel:
                    text_color: app.theme_cls.primary_color
                    theme_text_color: "Custom"
                    font_style: 'Subtitle2'
                    halign: "center"
                    markup: True
                    text: "One of each faction is among the following."

            MDBoxLayout:
                size_hint: 1, 0.01

            MDFillRoundFlatIconButton:
                id: playerlogbutton
                text: "Upload log"
                icon: 'cloud-upload'
                font_style: "Button"
                md_bg_color: app.theme_cls.primary_color
                pos_hint: {"center_x":0.5, "center_y":0.5}
                on_press:
                    root.revealplayerlog()
                    root.ids.okbutton.disabled = False

            MDBoxLayout:
                size_hint: 1, 0.01

        MDBoxLayout:
            size_hint: 1, 0.01

        MDRectangleFlatButton:
            id: okbutton
            disabled: True
            font_style: "Button"
            theme_text_color: "Custom"
            pos_hint: {"center_x": 0.5, "center_y": 0.5}
            line_color: C("FFFFFF")
            text_color: C("FFFFFF")
            text: "OK"
            on_release:
                root.dismiss()