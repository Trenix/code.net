<LogDialog>:
    size_hint: 0.7, 0.4
    auto_dismiss: False

    MDCard:
        id: logcard
        spacing: "12dp"
        orientation: "vertical"
        padding: "8dp"
        md_bg_color: app.theme_cls.primary_color
        border_radius: "20dp"
        radius: ["15dp"]

        MDLabel:
            text: "Player Log"
            font_style: "H4"
            size_hint_y: None
            height: self.texture_size[1]
            halign: "center"
            theme_text_color: "Custom"
            text_color: C("FFFFFF")

        MDSeparator:
            color: C("FFFFFF")

        MDStackLayout:
            padding: "8dp"
            spacing: "12dp"
            canvas.before:
                Color:
                    rgba: 0/255, 0/255, 0/255, 0.8
                Line:
                    width: 0.3
                    rectangle: self.x, self.y, self.width, self.height
                Color:
                    rgba: 0/255, 0/255, 0/255, 0.5
                Rectangle:
                    pos: self.pos
                    size: self.size

            MDLabel:
                id: whatplayer
                text: "[u]Player[/u]: "
                text_color: C("FFFFFF")
                font_style: "Subtitle1"
                theme_text_color: "Custom"
                adaptive_height: True
                markup: True

            MDLabel:
                markup: True
                font_style: "Subtitle1"
                adaptive_height: True
                theme_text_color: "Custom"
                text_color: C("FFFFFF")
                text: "[u]Confidential[/u]: You may not reveal your log until the end of the phase."

        MDLabel:
            text: "Result"
            font_style: "H4"
            size_hint_y: None
            height: self.texture_size[1]
            halign: "center"
            theme_text_color: "Custom"
            text_color: C("FFFFFF")

        MDSeparator:
            color: C("FFFFFF")

        Widget:
            size_hint: 1, 0.01

        MDBoxLayout:
            orientation: "vertical"
            canvas.before:
                Color:
                    rgba: 0/255, 0/255, 0/255, 0.8
                Line:
                    width: 0.3
                    rectangle: self.x, self.y, self.width, self.height
                Color:
                    rgba: 0/255, 0/255, 0/255, 0.5
                Rectangle:
                    pos: self.pos
                    size: self.size

            MDLabel:
                id: log1sub
                markup: True
                text_color: app.theme_cls.primary_color
                theme_text_color: "Custom"
                font_style: 'Subtitle2'
                halign: "center"
                text: f"[size=30sp][font=Icons]{md_icons['folder']}[/font] [font=Icons]{md_icons['folder']}[/font][/size]"

            MDLabel:
                adaptive_height: True
                id: log1subtext
                halign: 'center'
                text: " "
                text_color: C("FFFFFF")
                adaptive_height: True
                theme_text_color: "Custom"
                font_style: 'Subtitle2'
                markup: True

            MDLabel:
                text_color: C("FFFFFF")
                theme_text_color: "Custom"
                font_style: 'Subtitle2'
                halign: "center"
                text: "Only one hacker is among the following."

        MDRectangleFlatButton:
            id: okbutton
            font_style: "Button"
            theme_text_color: "Custom"
            pos_hint: {"center_x": 0.5, "center_y": 0.5}
            line_color: C("FFFFFF")
            text_color: C("FFFFFF")
            text: "End Turn"
            on_release:
                app.root.get_screen('main').ids.mainscreenmanager.get_screen('playerlogscreen').trackplayer()
                root.dismiss()