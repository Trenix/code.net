<LogDialog>:
    size_hint: 0.8, 0.5
    auto_dismiss: False

    MDCard:
        spacing: 10
        orientation: "vertical"
        padding: 21
        md_bg_color: app.theme_cls.primary_color

        MDLabel:
            id: playerlogtitle
            font_style: "H4"
            size_hint_y: None
            height: self.texture_size[1]
            halign: "center"
            theme_text_color: "Custom"
            text_color: C("FFFFFF")

        MDSeparator:
            color: C("FFFFFF")

        MDLabel:
            font_style: "Subtitle2"
            adaptive_height: True
            theme_text_color: "Custom"
            halign: "center"
            text_color: C("FFFFFF")
            text: "Only the player which owns the log may upload and see the results."

        MDBoxLayout:
            size_hint: 1, 0.6
            orientation: "vertical"
            pos_hint: {"center_x":0.5, "y": 0}
            md_bg_color: C('000000')

            MDBoxLayout:
                size_hint: 1, 0.15

            MDBoxLayout:
                pos_hint: {"center_x":0.5, "y": 0}
                orientation: "vertical"
                size_hint: 0.92, 1
                canvas.before:
                    Color:
                        rgba: 51/255, 255/255, 51/255, 0.3
                    Line:
                        width: 0.3
                        rectangle: self.x, self.y, self.width, self.height
                    Color:
                        rgba: 51/255, 255/255, 51/255, 0.06
                    Rectangle:
                        pos: self.pos
                        size: self.size

                MDLabel:
                    id: log1sub
                    markup: True
                    text_color: app.theme_cls.primary_color
                    theme_text_color: "Custom"
                    font_style: 'Subtitle2'
                    halign: "center"
                    text: f"[size=30][font=Icons]{md_icons['folder']}[/font] [font=Icons]{md_icons['folder']}[/font][/size]"

                MDLabel:
                    text_color: app.theme_cls.primary_color
                    theme_text_color: "Custom"
                    font_style: 'Subtitle2'
                    halign: "center"
                    markup: True
                    text: "One of each faction is among the following."

            MDBoxLayout:
                size_hint: 1, 0.2

            MDFillRoundFlatIconButton:
                id: playerlogbutton
                text: "Upload log"
                icon: 'cloud-upload'
                font_style: "Button"
                md_bg_color: app.theme_cls.primary_color
                pos_hint: {"center_x":0.5, "center_y":0.5}
                on_press:
                    root.revealplayerlog()
                    root.ids.okbutton.disabled = False

            MDBoxLayout:
                size_hint: 1, 0.15

        MDBoxLayout:
            size_hint: 1, 0.1

        MDRectangleFlatButton:
            id: okbutton
            disabled: True
            font_style: "Button"
            theme_text_color: "Custom"
            pos_hint: {"center_x": 0.5, "center_y": 0.5}
            md_bg_color: app.theme_cls.primary_dark
            line_color: C("FFFFFF")
            text_color: C("FFFFFF")
            text: "OK"
            on_release:
                root.dismiss()