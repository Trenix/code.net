<PlayerDialog>:
    auto_dismiss: False
    size_hint: 0.8, 0.5

    MDCard:
        orientation: "vertical"
        padding: 21
        spacing: 5
        md_bg_color: app.theme_cls.primary_color

        MDLabel:
            text: "Information"
            font_style: "H4"
            size_hint_y: None
            height: self.texture_size[1]
            halign: "center"
            theme_text_color: "Custom"
            text_color: C("FFFFFF")

        MDSeparator:
            color: C("FFFFFF")

        MDBoxLayout:
            orientation: "vertical"
            spacing: 5

            MDBoxLayout:
                size_hint: 1, 0.1

            MDLabel:
                halign: "left"
                text_color: C("FFFFFF")
                font_style: "Subtitle1"
                text: f"[font=Icons]{md_icons['account']}[/font]: AI"
                theme_text_color: "Custom"
                adaptive_height: True
                markup: True

            MDLabel:
                halign: "left"
                text_color: C("FFFFFF")
                font_style: "Subtitle1"
                text: f"[color=#c62828][font=Icons]{md_icons['account']}[/font][/color]: Hacker"
                theme_text_color: "Custom"
                adaptive_height: True
                markup: True

            MDSeparator:
                color: C("FFFFFF")

            MDLabel:
                md_bg_color: app.theme_cls.primary_dark
                halign: "center"
                text_color: C("FFFFFF")
                font_style: "Subtitle1"
                text: f"[font=Icons]{md_icons['account-group']}[/font] 4 Players: [size=19][font=Icons]{md_icons['account']}{md_icons['numeric-1-circle']}[color=#c62828]{md_icons['account']}{md_icons['numeric-2-circle']}[/color][/font][/size]"
                theme_text_color: "Custom"
                adaptive_height: True
                markup: True

            MDLabel:
                halign: "center"
                text_color: C("FFFFFF")
                font_style: "Subtitle1"
                theme_text_color: "Custom"
                adaptive_height: True
                markup: True
                md_bg_color: app.theme_cls.primary_dark
                text: f"[font=Icons]{md_icons['account-group']}[/font] 5 Players: [size=19][font=Icons]{md_icons['account']}{md_icons['numeric-1-circle']}[color=#c62828]{md_icons['account']}{md_icons['numeric-2-circle']}[/color][/font][/size]"

            MDLabel:
                md_bg_color: app.theme_cls.primary_dark
                halign: "center"
                text_color: C("FFFFFF")
                font_style: "Subtitle1"
                theme_text_color: "Custom"
                adaptive_height: True
                markup: True
                text: f"[font=Icons]{md_icons['account-group']}[/font] 6 Players: [size=19][font=Icons]{md_icons['account']}{md_icons['numeric-0-circle']}[color=#c62828]{md_icons['account']}{md_icons['numeric-2-circle']}[/color][/font][/size]"

            MDLabel:
                halign: "center"
                font_style: "Subtitle1"
                theme_text_color: "Custom"
                text_color: C("FFFFFF")
                adaptive_height: True
                markup: True
                md_bg_color: app.theme_cls.primary_dark
                text: f"[font=Icons]{md_icons['account-group']}[/font] 7 Players: [size=19][font=Icons]{md_icons['account']}{md_icons['numeric-0-circle']}[color=#c62828]{md_icons['account']}{md_icons['numeric-2-circle']}[/color][/font][/size]"

            MDLabel:
                md_bg_color: app.theme_cls.primary_dark
                halign: "center"
                font_style: "Subtitle1"
                theme_text_color: "Custom"
                text_color: C("FFFFFF")
                adaptive_height: True
                markup: True
                text: f"[font=Icons]{md_icons['account-group']}[/font] 8 Players: [size=19][font=Icons]{md_icons['account']}{md_icons['numeric-0-circle']}[color=#c62828]{md_icons['account']}{md_icons['numeric-2-circle']}[/color][/font][/size]"

            MDLabel:
                halign: "center"
                font_style: "Subtitle1"
                theme_text_color: "Custom"
                text_color: C("FFFFFF")
                adaptive_height: True
                markup: True
                md_bg_color: app.theme_cls.primary_dark
                text: f"[font=Icons]{md_icons['account-group']}[/font] 9 Players: [size=19][font=Icons]{md_icons['account']}{md_icons['numeric-0-circle']}[color=#c62828]{md_icons['account']}{md_icons['numeric-3-circle']}[/color][/font][/size]"

            MDBoxLayout:

        MDBoxLayout:
            size_hint: 1, 0.02

        MDRectangleFlatButton:
            font_style: "Button"
            theme_text_color: "Custom"
            pos_hint: {"center_x": 0.5, "center_y": 0.5}
            md_bg_color: app.theme_cls.primary_dark
            line_color: C("FFFFFF")
            text_color: C("FFFFFF")
            text: "OK"
            on_release:
                root.dismiss()