<ActionDialog>:
    auto_dismiss: False
    size_hint: 0.9, 0.5

    MDCard:
        orientation: "vertical"
        spacing: "8dp"
        padding: "8dp"
        md_bg_color: app.theme_cls.primary_color
        border_radius: "20dp"
        radius: ["15dp"]

        MDLabel:
            id: actiontitle
            font_style: "H4"
            size_hint_y: None
            height: self.texture_size[1]
            halign: "center"
            theme_text_color: "Custom"
            text_color: C("FFFFFF")

        MDSeparator:
            color: C("FFFFFF")

        MDLabel:
            id: whataction
            text: "[u]Action[/u]: "
            text_color: C("FFFFFF")
            font_style: "Subtitle1"
            theme_text_color: "Custom"
            adaptive_height: True
            markup: True

        MDLabel:
            id: whatpriority
            text: "[u]Priority[/u]: "
            text_color: C("FFFFFF")
            font_style: "Subtitle1"
            theme_text_color: "Custom"
            adaptive_height: True
            markup: True

        MDLabel:
            id: actiondesc
            text: "[u]Description[/u]: "
            text_color: C("FFFFFF")
            font_style: "Subtitle1"
            theme_text_color: "Custom"
            adaptive_height: True
            markup: True

        MDSeparator:
            color: C("FFFFFF")

        MDLabel:
            text: "Select"
            halign: "center"
            text_color: C("FFFFFF")
            font_style: "H5"
            theme_text_color: "Custom"
            adaptive_height: True

        MDBoxLayout:
            adaptive_height: True
            orientation: "horizontal"
            spacing: "8dp"
            id: addbuttons

        MDLabel:
            adaptive_height: True
            halign: "center"
            text: "Result"
            text_color: C("FFFFFF")
            font_style: "H5"
            theme_text_color: "Custom"

        MDBoxLayout:
            padding: "8dp"
            canvas.before:
                Color:
                    rgba: 0/255, 0/255, 0/255, 0.8
                Line:
                    width: 0.3
                    rectangle: self.x, self.y, self.width, self.height
                Color:
                    rgba: 0/255, 0/255, 0/255, 0.4
                Rectangle:
                    pos: self.pos
                    size: self.size

            MDLabel:
                id: actionresult
                text_color: C("FFFFFF")
                font_style: "Subtitle1"
                theme_text_color: "Custom"
                halign: "center"
                markup: True

        Widget:

        MDRectangleFlatButton:
            id: okaction
            font_style: "Button"
            theme_text_color: "Custom"
            pos_hint: {"center_x": 0.5, "center_y": 0.5}
            line_color: C("FFFFFF")
            text_color: C("FFFFFF")
            text: "End Turn"
            disabled: True
            on_release:
                app.root.get_screen('main').ids.mainscreenmanager.get_screen('actionscreen').actiontracker()
                root.dismiss()