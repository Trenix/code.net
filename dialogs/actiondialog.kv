<ActionDialog>:
    auto_dismiss: False
    size_hint: 0.9, 0.5

    MDCard:
        orientation: "vertical"
        spacing: "8dp"
        padding: "8dp"
        md_bg_color: app.theme_cls.primary_color
        border_radius: "20dp"
        radius: ["15dp"]

        MDLabel:
            id: actiontitle
            font_style: "H4"
            size_hint_y: None
            height: self.texture_size[1]
            halign: "center"
            theme_text_color: "Custom"
            text_color: C("FFFFFF")

        MDSeparator:
            color: C("FFFFFF")

        Widget:
            size_hint: 1, 0.01

        MDBoxLayout:
            spacing: "8dp"
            orientation: "vertical"
            padding: "8dp"

            MDLabel:
                id: whataction
                halign: "center"
                text_color: C("FFFFFF")
                font_style: "H5"
                theme_text_color: "Custom"
                adaptive_height: True
                markup: True

            MDLabel:
                id: actiondesc
                halign: "center"
                text_color: C("FFFFFF")
                font_style: "Subtitle1"
                theme_text_color: "Custom"
                adaptive_height: True
                markup: True

            MDBoxLayout:
                id: addbuttons
                orientation: "horizontal"

            Widget:
                size_hint: 1, 0.01

        Widget:
            size_hint: 1, 0.01

        MDRectangleFlatButton:
            id: okaction
            font_style: "Button"
            theme_text_color: "Custom"
            pos_hint: {"center_x": 0.5, "center_y": 0.5}
            line_color: C("FFFFFF")
            text_color: C("FFFFFF")
            text: "OK"
            disabled: True
            on_release:
                root.dismiss()