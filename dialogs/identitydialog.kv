<IdentityDialog>:
    auto_dismiss: False
    size_hint: 0.9, 0.5

    MDCard:
        orientation: "vertical"
        spacing: "8dp"
        padding: "8dp"
        md_bg_color: app.theme_cls.primary_color
        border_radius: "20dp"
        radius: ["15dp"]

        MDLabel:
            text: "Identity"
            font_style: "H4"
            size_hint_y: None
            height: self.texture_size[1]
            halign: "center"
            theme_text_color: "Custom"
            text_color: C("FFFFFF")

        MDSeparator:
            color: C("FFFFFF")

        MDBoxLayout:
            size_hint: 1, 0.01

        MDBoxLayout:
            id: identity
            spacing: "8dp"
            orientation: "vertical"
            padding: "8dp"
#            canvas.before:
#                Color:
#                    rgba: C('#296f2c')
#                Line:
#                    width: 2.5
#                    rectangle: self.x, self.y, self.width, self.height
#                Color:
#                    rgba: C('#236027')
#                Rectangle:
#                    pos: self.pos
#                    size: self.size

            MDLabel:
                id: whatcolor
                text_color: C("FFFFFF")
                font_style: "Subtitle1"
                theme_text_color: "Custom"
                adaptive_height: True
                markup: True

            MDLabel:
                id: arehacker
                text_color: C("FFFFFF")
                font_style: "Subtitle1"
                theme_text_color: "Custom"
                adaptive_height: True
                markup: True

            MDLabel:
                id: haveallies
                text_color: C("FFFFFF")
                font_style: "Subtitle1"
                theme_text_color: "Custom"
                adaptive_height: True
                markup: True

            MDLabel:
                id: identitydes
                font_style: "Subtitle1"
                theme_text_color: "Custom"
                text_color: C("FFFFFF")
                adaptive_height: True
                markup: True

            MDBoxLayout:
                size_hint: 1, 0.01

        MDBoxLayout:
            size_hint: 1, 0.01

        MDRectangleFlatButton:
            font_style: "Button"
            theme_text_color: "Custom"
            pos_hint: {"center_x": 0.5, "center_y": 0.5}
            line_color: C("FFFFFF")
            text_color: C("FFFFFF")
            text: "End Turn"
            on_release:
                root.dismiss()