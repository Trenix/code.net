                id: currentround
                text: f"[size=30][font=Icons]{md_icons['circle-outline']}{md_icons['circle-outline']}{md_icons['circle-outline']}[/font][/size]"
                markup: True
                halign: "center"
                pos_hint: {"center_x": 0.5, "top": 1}

            MDBoxLayout:

