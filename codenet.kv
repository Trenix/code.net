                    id: playeridentifer
                    markup: True
                    pos_hint: {"right": 1, "top": 1}

            MDLabel:
                theme_text_color: "Custom"
                font_style: "H4"
                halign: "center"
                text_color: C("FFFFFF")
                text: "Round"
                pos_hint: {"right": 1, "center_y": 0.5}

            MDSeparator:
                color: C("FFFFFF")
                adaptive_height: True

            MDLabel:
                text_color: app.theme_cls.primary_color
